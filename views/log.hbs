<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
      
        <style>
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: "poppins",sans-serif;
            }
            body{
                background-color: black;
                display: flex;
                flex-flow: wrap row;
                justify-content: center;
                align-content: center;
            }
            form{
                width: 50%;
                display: flex;
                flex-flow: wrap row;
                align-content: center;
            }
            form input{
                background-color: black;
                border: 2px solid lawngreen;
                border-radius:1rem;
                font-size: 2rem;
                padding: 1.4rem;
                width: 100%;
                margin: 1.5rem 0;
                outline: 0;
                color: lawngreen;
            }
            form input:hover{
                border: 2px solid yellow;
            }
            form input::placeholder{
                color: rgba(255, 255, 255, 0.516);
                font-weight: 300;
                letter-spacing: 1px;
            }
            form button{
                background-color: lawngreen;
                color: black;
                padding: 1rem 2rem;
                border-radius: 1rem;
                font-size: 2rem;
                display: block;
                margin:1rem auto;
                border:0px;
                outline:0px;
            }
            form button:hover{
                background-color: rgba(126, 252, 0, 0.828);
            }
            @media screen and (max-width:800px){
                form{
                    width:80%;
                }                
            }
            @media screen and (max-width:603px){
                form{
                    width: 92%;
                }            
                form input{
                    font-size: 2rem;
                }    
            }
            @media screen and (max-width:440px){
                form input{
                    font-size: 1.7rem;
                }                
            }
            @media screen and (max-width:410px){
                form input{
                    font-size:7vw;
                }                
            }
        </style>
    </head>
    <body>
        <form action="/log_in" method="post">
            <input type="text" placeholder="Username" name="uname" onblur="user()" required>
            <input type="password" placeholder="Password" name="pword" required>
            <button type="submit"><i class="fa-solid fa-right-to-bracket"></i></button>
        </form>
        <script>
        var use;
        function user(){
            use = document.getElementsByName("uname")[0].value;
            use = use.trim();
            document.getElementsByName("uname")[0].value=use;
        }
        </script>
    </body>
</html>
